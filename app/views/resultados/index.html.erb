<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <h1>Resultados</h1>

  <%= link_to "Agregar resultado", new_resultado_path, :class => "btn btn-outline-success" %>

  <div id="resultados">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Orden:</th>
          <th scope="col">Parametro:</th>
          <th scope="col">Descripci√≥n:</th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden="true"><%= @number = 1 %></div>
        <% @resultados.each do |resultado| %>
          <tr>
            <th scope="row"><%= @number %></th>
            <td><%= resultado.orden_id %></td>
            <td><%= resultado.parametro.nombre_parametro %></td>
            <td><%= resultado.descripcion %></td>
            <td><%= link_to "Ver", resultado, :class => "btn btn-outline-primary" %></td>
            <div hidden="true"><%= @number = @number + 1 %></div>
          </tr>
          <%#= render country %>
          <!--              <p><%#= link_to "Ver", muestra, :class=>"btn btn-outline-primary" %></p>-->
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%#= link_to "Agregar Pais", new_country_path %>


<% end %>
<%= render template: "layouts/base" %>
