<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <%= render @empleado %>

  <div class="btn-group">
  <% @control_edit = 0%>
  <% @control_delete = 0%>
  <% @control = 0%>
  <% @permisos_crud.each do |submenu|%>
    <% if @control == 2%>
    <% break%>
    <% end %>
    <% if submenu == 2 && @control_delete == 0 %>
      <%= button_to "Eliminar", @empleado, method: :delete, :class => "btn btn-outline-danger" %>
      <% @control_delete = @control_delete + 1%>  
    <% elsif submenu == 1 && @control_edit == 0 %>
      <%= link_to "Editar", edit_empleado_path(@empleado), :class => "btn btn-outline-warning" %> &nbsp;
      <% @control_edit = @control_edit + 1%>  
    <% end %>
    <% @control = @control + 1%>
    <% end %>
      <%= link_to "Regresar", empleados_path, :class => "btn btn-outline-dark" %> &nbsp;
  </div>

<% end %>
<%= render template: "home/nav" %>
<%= render template: "layouts/base" %>