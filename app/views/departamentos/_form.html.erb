<%= form_with(model: departamento) do |form| %>
  <% if departamento.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>

      <ul>
        <% departamento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-6">
    <%= form.label :"Departamento:", style: "display: block"  %>
    <%= form.text_field :nombre_departamento, class:"form-control" %>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :"País:", style: "display: block" %>
    <%= form.select :country_id, Country.all.collect { |p| [ p.nombre_country, p.id ] }, {prompt: "Seleccione un país"}%>
  </div>

  <br>

  <div>
    <%= form.submit "Guardar", class:"btn btn-outline-success"%>
    <%= link_to "Cancelar", departamentos_path, :class => "btn btn-outline-danger"%>
  </div>

<% end %>

<script>
  $(document).ready(function() {
    $('select').select2();
  });
</script>
