<% content_for :content do %>
<p style="color: green"><%= notice %></p>

<%= render @menu_rol %>

<div class="btn-group">
<% @permisos_crud.each do |submenu|%>
  <% if submenu == 2 %>
  <%= button_to "Eliminar", @menu_rol, method: :delete, :class => "btn btn-outline-danger" %>&nbsp;
