  <%= link_to "Editar", edit_menu_rol_path(@menu_rol), :class => "btn btn-outline-warning" %> &nbsp;
  <% end %>
  <% end %>
  <%= link_to "Regresar", menu_rols_path, :class => "btn btn-outline-dark" %>&nbsp;
</div>


<% end %>
<%= render template: "home/nav" %>
