<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <h1>Menú roles</h1>
  <%= link_to "Agregar menú rol", new_menu_rol_path, :class => "btn btn-outline-success" %>

  <div id="menu_rols">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Menú</th>
          <th scope="col">Rol</th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <% @menu_rols.each do |menu_rol| %>
          <tr>
            <th scope="row">1</th>
            <th><%= menu_rol.menu.nombre %></th>
            <th><%= menu_rol.rol.nombre_rol %></th>
            <th><%= link_to "Ver", menu_rol, :class => "btn btn-outline-primary" %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>



<% end %>
<%= render template: "layouts/base" %>