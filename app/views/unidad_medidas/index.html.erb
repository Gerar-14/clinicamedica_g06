<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <h1>Unidades de medida</h1>

  <%= link_to "Agregar unidad de medida", new_unidad_medida_path, :class => "btn btn-outline-success" %>

  <div id="unidadmedidas">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Unidad de medida:</th>
          <th scope="col">Siglas:</th>
          <th scope="col">Sistema de medida:</th>
          <th scope="col">Descripci√≥n:</th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden="true"><%= @number = 1 %></div>
        <% @unidad_medidas.each do |unidad_medida| %>
          <tr>
            <th scope="row"><%= @number %></th>
            <td><%= unidad_medida.nombre_unidad_medida %></td>
            <td><%= unidad_medida.siglas %></td>
            <td><%= unidad_medida.sistema_medida %></td>
            <td><%= unidad_medida.descripcion_unidad_medida %></td>
            <td><%= link_to "Ver", unidad_medida, :class => "btn btn-outline-primary" %></td>
            <div hidden="true"><%= @number = @number + 1 %></div>
          </tr>
          <%#= render country %>
