<% content_for :content do %>

  <p style="color: green"><%= notice %></p>

  <h1>Menús</h1>

  <% if @permisos_crud%>
  <%= link_to "Agregar menú", new_menu_path, :class => "btn btn-outline-success" %>
  <% end %>

  <div id="menus">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Menú:</th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden="true"><%= @number = 1 %></div>
        <% @menuss.each do |menu| %>
          <tr>
            <th scope="row"><%= @number %></th>
            <td><%= menu.nombre %></td>
            <td><%= link_to "Ver", menu, :class => "btn btn-outline-primary" %></td>
            <div hidden="true"><%= @number = @number + 1 %></div>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>


<% end %>
<%= render template: "home/nav" %>
<%= render template: "layouts/base" %>
