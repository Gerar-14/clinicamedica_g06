<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <h1>Accesos</h1>

  <%= link_to "Agregar acceso", new_acceso_path, :class => "btn btn-outline-success" %>

  <div id="acceso">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Rol </th>
          <th scope="col">Permiso </th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden="true"><%= @number = 1 %></div>
        <% @accesos.each do |acceso| %>
          <tr>
            <th scope="row"><%= @number %></th>
            <td><%= acceso.rol.nombre_rol %></td>
            <td><%= acceso.permiso.nombre_permiso %></td>
            <th><%= link_to "Ver", acceso, :class => "btn btn-outline-primary" %></th>
            <div hidden="true"><%= @number = @number + 1 %></div>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

<% end %>
<%= render template: "home/nav" %>
<%= render template: "layouts/base" %>

