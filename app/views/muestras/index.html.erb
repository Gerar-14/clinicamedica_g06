<% content_for :content do %>
  <p style="color: green"><%= notice %></p>

  <h1>Muestras</h1>

  <%= link_to "Agregar muestra", new_muestra_path, :class => "btn btn-outline-success" %>

  <div id="muestras">
    <div class="card-body">
      <table id="datatablesSimple" class="table">
        <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Muestra:</th>
          <th scope="col">Acciones</th>
        </tr>
        </thead>
        <tbody>
        <div hidden="true"><%= @number = 1 %></div>
        <% @muestras.each do |muestra| %>
          <tr>
            <th scope="row"><%= @number %></th>
            <td><%= muestra.tipo_muestra %></td>
            <td><%= link_to "Ver", muestra, :class => "btn btn-outline-primary" %></td>
            <div hidden="true"><%= @number = @number + 1 %></div>
          </tr>
          <%#= render country %>
          <!--              <p><%#= link_to "Ver", muestra, :class=>"btn btn-outline-primary" %></p>-->
        <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%#= link_to "Agregar Pais", new_country_path %>


<% end %>
<%= render template: "layouts/base" %>

