<div id="layoutSidenav">
  <div id="layoutSidenav_nav">
    <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
      <%= content_for?(:nav) ? yield(:nav) : yield %>
      <div class="sb-sidenav-footer">
        <div class="small">Bienvenido: <%= current_user.email %></div>
        Clínica Medica
      </div>
    </nav>
  </div>
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid px-4">
        <% if notice %>
          <p class="alert alert-primary"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>
        <h1 class="mt-4">Bienvenido <%= current_user.email %></h1>

        <div class="row">
          <div class="col-xl-12">
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-chart-area me-1"></i>
                Gestion
              </div>
              <div class="card-body">

                <div id="content"><%= yield :content %></div>
<!--                <div id="content"><%#= content_for?(:content) ? yield(:content) : yield %></div>-->

              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="py-4 bg-light mt-auto">
      <div class="container-fluid px-4">
        <div class="d-flex align-items-center justify-content-between small">
          <div class="text-muted">Copyright &copy; Clinica Medica 2022</div>
          <div>
            <a href="#">Privacy Policy</a>
            &middot;
            <a href="#">Terms &amp; Conditions</a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</div>
